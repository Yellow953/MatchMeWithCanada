<div class="d-flex justify-content-between mx-2">
  <h1>Clients</h1>
  <%= link_to "New Client", "", class: "btn btn-primary my-auto" %>
</div>
<div class="container-fluid custom-container m-2 p-4">
  <table class="table table-striped">
    <thead class="thead-dark bg-custom-red">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="max-w-150">
            <div class="d-flex">
              <div class="mx-2 my-auto">
                <% if user.image.attached? %>
                  <%= image_tag user.image, class:"admin-img" %>
                <% else %>
                  <%= image_tag "default_profile", class:"admin-img" %>
                <% end %>
              </div>
              <div>
                <%= user.name %><br>
              </div>
            </div>
          </td>
          <td>
            <%= user.email %>
          </td>
          <td class="max-w-150">
            <%= user.phone %>
          </td>
          <td class="max-w-200">
            <div class="d-flex my-2">
              <%= link_to "edit", "", class: "btn btn-warning mx-2" %>
              <%= button_to "delete", "", method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "btn btn-danger mx-2" %>
            <div>
          </td>
        <tr>
      <% end %>
    </tbody>
  </table>
</div>