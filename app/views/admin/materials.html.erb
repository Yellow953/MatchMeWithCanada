<div class="d-flex justify-content-between mx-2">
  <h1>Materials</h1>
  <%= link_to "New Material", "", class: "btn btn-primary my-auto" %>
</div>
<div class="container-fluid custom-container m-2 p-4">
  <table class="table table-striped">
    <thead class="thead-dark bg-custom-red">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">link</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @materials.each do |material| %>
        <tr>
          <td class="max-w-150">
            <div class="d-flex">
              <div class="mx-2 my-auto">
                <% if material.image.attached? %>
                  <%= image_tag material.image, class:"admin-img" %>
                <% else %>
                  <%= image_tag "default_profile", class:"admin-img" %>
                <% end %>
              </div>
              <div>
                <%= material.name %>
              </div>
            </div>
          </td>
          <td>
            <%= material.price %>
          </td>
          <td class="max-w-150">
            <%= material.link %>
          </td>
          <td class="max-w-200">
            <div class="d-flex my-2">
              <%= link_to "edit", "", class: "btn btn-warning mx-2" %>
              <%= button_to "delete", "", method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "btn btn-danger mx-2" %>
            <div>
          </td>
        <tr>
      <% end %>
    </tbody>
  </table>
</div>